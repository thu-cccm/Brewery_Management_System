<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiuchang.system.mapper.BrewProductionPlanMapper">
    
    <resultMap type="BrewProductionPlan" id="BrewProductionPlanResult">
        <result property="planId"    column="plan_id"    />
        <result property="planCode"    column="plan_code"    />
        <result property="planName"    column="plan_name"    />
        <result property="categoryId"    column="category_id"    />
        <result property="templateId"    column="template_id"    />
        <result property="targetOutput"    column="target_output"    />
        <result property="planStartDate"    column="plan_start_date"    />
        <result property="planEndDate"    column="plan_end_date"    />
        <result property="responsiblePerson"    column="responsible_person"    />
        <result property="planStatus"    column="plan_status"    />
        <result property="approveBy"    column="approve_by"    />
        <result property="approveTime"    column="approve_time"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectBrewProductionPlanVo">
        select plan_id, plan_code, plan_name, category_id, template_id, target_output, plan_start_date, plan_end_date, responsible_person, plan_status, approve_by, approve_time, remark, create_by, create_time, update_by, update_time, del_flag from brew_production_plan
    </sql>

    <select id="selectBrewProductionPlanList" parameterType="BrewProductionPlan" resultMap="BrewProductionPlanResult">
        <include refid="selectBrewProductionPlanVo"/>
        <where>  
            <if test="planCode != null  and planCode != ''"> and plan_code = #{planCode}</if>
            <if test="planName != null  and planName != ''"> and plan_name like concat('%', #{planName}, '%')</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="templateId != null "> and template_id = #{templateId}</if>
            <if test="targetOutput != null "> and target_output = #{targetOutput}</if>
            <if test="planStartDate != null "> and plan_start_date = #{planStartDate}</if>
            <if test="planEndDate != null "> and plan_end_date = #{planEndDate}</if>
            <if test="responsiblePerson != null  and responsiblePerson != ''"> and responsible_person = #{responsiblePerson}</if>
            <if test="planStatus != null  and planStatus != ''"> and plan_status = #{planStatus}</if>
            <if test="approveBy != null  and approveBy != ''"> and approve_by = #{approveBy}</if>
            <if test="approveTime != null "> and approve_time = #{approveTime}</if>
        </where>
    </select>
    
    <select id="selectBrewProductionPlanByPlanId" parameterType="Long" resultMap="BrewProductionPlanResult">
        <include refid="selectBrewProductionPlanVo"/>
        where plan_id = #{planId}
    </select>

    <insert id="insertBrewProductionPlan" parameterType="BrewProductionPlan" useGeneratedKeys="true" keyProperty="planId">
        insert into brew_production_plan
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="planCode != null and planCode != ''">plan_code,</if>
            <if test="planName != null and planName != ''">plan_name,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="templateId != null">template_id,</if>
            <if test="targetOutput != null">target_output,</if>
            <if test="planStartDate != null">plan_start_date,</if>
            <if test="planEndDate != null">plan_end_date,</if>
            <if test="responsiblePerson != null">responsible_person,</if>
            <if test="planStatus != null">plan_status,</if>
            <if test="approveBy != null">approve_by,</if>
            <if test="approveTime != null">approve_time,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="planCode != null and planCode != ''">#{planCode},</if>
            <if test="planName != null and planName != ''">#{planName},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="templateId != null">#{templateId},</if>
            <if test="targetOutput != null">#{targetOutput},</if>
            <if test="planStartDate != null">#{planStartDate},</if>
            <if test="planEndDate != null">#{planEndDate},</if>
            <if test="responsiblePerson != null">#{responsiblePerson},</if>
            <if test="planStatus != null">#{planStatus},</if>
            <if test="approveBy != null">#{approveBy},</if>
            <if test="approveTime != null">#{approveTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateBrewProductionPlan" parameterType="BrewProductionPlan">
        update brew_production_plan
        <trim prefix="SET" suffixOverrides=",">
            <if test="planCode != null and planCode != ''">plan_code = #{planCode},</if>
            <if test="planName != null and planName != ''">plan_name = #{planName},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="templateId != null">template_id = #{templateId},</if>
            <if test="targetOutput != null">target_output = #{targetOutput},</if>
            <if test="planStartDate != null">plan_start_date = #{planStartDate},</if>
            <if test="planEndDate != null">plan_end_date = #{planEndDate},</if>
            <if test="responsiblePerson != null">responsible_person = #{responsiblePerson},</if>
            <if test="planStatus != null">plan_status = #{planStatus},</if>
            <if test="approveBy != null">approve_by = #{approveBy},</if>
            <if test="approveTime != null">approve_time = #{approveTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where plan_id = #{planId}
    </update>

    <delete id="deleteBrewProductionPlanByPlanId" parameterType="Long">
        delete from brew_production_plan where plan_id = #{planId}
    </delete>

    <delete id="deleteBrewProductionPlanByPlanIds" parameterType="String">
        delete from brew_production_plan where plan_id in 
        <foreach item="planId" collection="array" open="(" separator="," close=")">
            #{planId}
        </foreach>
    </delete>
</mapper>