<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiuchang.system.mapper.BrewCostItemMapper">
    
    <resultMap type="BrewCostItem" id="BrewCostItemResult">
        <result property="itemId"    column="item_id"    />
        <result property="itemCode"    column="item_code"    />
        <result property="itemName"    column="item_name"    />
        <result property="itemType"    column="item_type"    />
        <result property="calculationMethod"    column="calculation_method"    />
        <result property="unitCost"    column="unit_cost"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectBrewCostItemVo">
        select item_id, item_code, item_name, item_type, calculation_method, unit_cost, status, remark, create_by, create_time, update_by, update_time, del_flag from brew_cost_item
    </sql>

    <select id="selectBrewCostItemList" parameterType="BrewCostItem" resultMap="BrewCostItemResult">
        <include refid="selectBrewCostItemVo"/>
        <where>  
            <if test="itemCode != null  and itemCode != ''"> and item_code = #{itemCode}</if>
            <if test="itemName != null  and itemName != ''"> and item_name like concat('%', #{itemName}, '%')</if>
            <if test="itemType != null  and itemType != ''"> and item_type = #{itemType}</if>
            <if test="calculationMethod != null  and calculationMethod != ''"> and calculation_method = #{calculationMethod}</if>
            <if test="unitCost != null "> and unit_cost = #{unitCost}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBrewCostItemByItemId" parameterType="Long" resultMap="BrewCostItemResult">
        <include refid="selectBrewCostItemVo"/>
        where item_id = #{itemId}
    </select>

    <insert id="insertBrewCostItem" parameterType="BrewCostItem" useGeneratedKeys="true" keyProperty="itemId">
        insert into brew_cost_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="itemCode != null and itemCode != ''">item_code,</if>
            <if test="itemName != null and itemName != ''">item_name,</if>
            <if test="itemType != null and itemType != ''">item_type,</if>
            <if test="calculationMethod != null">calculation_method,</if>
            <if test="unitCost != null">unit_cost,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="itemCode != null and itemCode != ''">#{itemCode},</if>
            <if test="itemName != null and itemName != ''">#{itemName},</if>
            <if test="itemType != null and itemType != ''">#{itemType},</if>
            <if test="calculationMethod != null">#{calculationMethod},</if>
            <if test="unitCost != null">#{unitCost},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateBrewCostItem" parameterType="BrewCostItem">
        update brew_cost_item
        <trim prefix="SET" suffixOverrides=",">
            <if test="itemCode != null and itemCode != ''">item_code = #{itemCode},</if>
            <if test="itemName != null and itemName != ''">item_name = #{itemName},</if>
            <if test="itemType != null and itemType != ''">item_type = #{itemType},</if>
            <if test="calculationMethod != null">calculation_method = #{calculationMethod},</if>
            <if test="unitCost != null">unit_cost = #{unitCost},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where item_id = #{itemId}
    </update>

    <delete id="deleteBrewCostItemByItemId" parameterType="Long">
        delete from brew_cost_item where item_id = #{itemId}
    </delete>

    <delete id="deleteBrewCostItemByItemIds" parameterType="String">
        delete from brew_cost_item where item_id in 
        <foreach item="itemId" collection="array" open="(" separator="," close=")">
            #{itemId}
        </foreach>
    </delete>
</mapper>