<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiuchang.system.mapper.BrewFormulaTemplateMapper">
    
    <resultMap type="BrewFormulaTemplate" id="BrewFormulaTemplateResult">
        <result property="templateId"    column="template_id"    />
        <result property="templateCode"    column="template_code"    />
        <result property="templateName"    column="template_name"    />
        <result property="categoryId"    column="category_id"    />
        <result property="baseOutput"    column="base_output"    />
        <result property="expectedAlcohol"    column="expected_alcohol"    />
        <result property="formulaDescription"    column="formula_description"    />
        <result property="isDefault"    column="is_default"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <resultMap id="BrewFormulaTemplateBrewFormulaDetailResult" type="BrewFormulaTemplate" extends="BrewFormulaTemplateResult">
        <collection property="brewFormulaDetailList" ofType="BrewFormulaDetail" column="template_id" select="selectBrewFormulaDetailList" />
    </resultMap>

    <resultMap type="BrewFormulaDetail" id="BrewFormulaDetailResult">
        <result property="detailId"    column="detail_id"    />
        <result property="templateId"    column="template_id"    />
        <result property="materialId"    column="material_id"    />
        <result property="materialRatio"    column="material_ratio"    />
        <result property="baseQuantity"    column="base_quantity"    />
        <result property="isMainMaterial"    column="is_main_material"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectBrewFormulaTemplateVo">
        select template_id, template_code, template_name, category_id, base_output, expected_alcohol, formula_description, is_default, status, create_by, create_time, update_by, update_time, del_flag from brew_formula_template
    </sql>

    <select id="selectBrewFormulaTemplateList" parameterType="BrewFormulaTemplate" resultMap="BrewFormulaTemplateResult">
        <include refid="selectBrewFormulaTemplateVo"/>
        <where>  
            <if test="templateCode != null  and templateCode != ''"> and template_code = #{templateCode}</if>
            <if test="templateName != null  and templateName != ''"> and template_name like concat('%', #{templateName}, '%')</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="baseOutput != null "> and base_output = #{baseOutput}</if>
            <if test="expectedAlcohol != null "> and expected_alcohol = #{expectedAlcohol}</if>
            <if test="formulaDescription != null  and formulaDescription != ''"> and formula_description = #{formulaDescription}</if>
            <if test="isDefault != null  and isDefault != ''"> and is_default = #{isDefault}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBrewFormulaTemplateByTemplateId" parameterType="Long" resultMap="BrewFormulaTemplateBrewFormulaDetailResult">
        select template_id, template_code, template_name, category_id, base_output, expected_alcohol, formula_description, is_default, status, create_by, create_time, update_by, update_time, del_flag
        from brew_formula_template
        where template_id = #{templateId}
    </select>

    <select id="selectBrewFormulaDetailList" resultMap="BrewFormulaDetailResult">
        select detail_id, template_id, material_id, material_ratio, base_quantity, is_main_material, sort_order, remark, create_by, create_time, update_by, update_time, del_flag
        from brew_formula_detail
        where template_id = #{template_id}
    </select>

    <insert id="insertBrewFormulaTemplate" parameterType="BrewFormulaTemplate" useGeneratedKeys="true" keyProperty="templateId">
        insert into brew_formula_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="templateCode != null and templateCode != ''">template_code,</if>
            <if test="templateName != null and templateName != ''">template_name,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="baseOutput != null">base_output,</if>
            <if test="expectedAlcohol != null">expected_alcohol,</if>
            <if test="formulaDescription != null">formula_description,</if>
            <if test="isDefault != null">is_default,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="templateCode != null and templateCode != ''">#{templateCode},</if>
            <if test="templateName != null and templateName != ''">#{templateName},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="baseOutput != null">#{baseOutput},</if>
            <if test="expectedAlcohol != null">#{expectedAlcohol},</if>
            <if test="formulaDescription != null">#{formulaDescription},</if>
            <if test="isDefault != null">#{isDefault},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateBrewFormulaTemplate" parameterType="BrewFormulaTemplate">
        update brew_formula_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="templateCode != null and templateCode != ''">template_code = #{templateCode},</if>
            <if test="templateName != null and templateName != ''">template_name = #{templateName},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="baseOutput != null">base_output = #{baseOutput},</if>
            <if test="expectedAlcohol != null">expected_alcohol = #{expectedAlcohol},</if>
            <if test="formulaDescription != null">formula_description = #{formulaDescription},</if>
            <if test="isDefault != null">is_default = #{isDefault},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where template_id = #{templateId}
    </update>

    <delete id="deleteBrewFormulaTemplateByTemplateId" parameterType="Long">
        delete from brew_formula_template where template_id = #{templateId}
    </delete>

    <delete id="deleteBrewFormulaTemplateByTemplateIds" parameterType="String">
        delete from brew_formula_template where template_id in 
        <foreach item="templateId" collection="array" open="(" separator="," close=")">
            #{templateId}
        </foreach>
    </delete>
    
    <delete id="deleteBrewFormulaDetailByTemplateIds" parameterType="String">
        delete from brew_formula_detail where template_id in 
        <foreach item="templateId" collection="array" open="(" separator="," close=")">
            #{templateId}
        </foreach>
    </delete>

    <delete id="deleteBrewFormulaDetailByTemplateId" parameterType="Long">
        delete from brew_formula_detail where template_id = #{templateId}
    </delete>

    <insert id="batchBrewFormulaDetail">
        insert into brew_formula_detail( detail_id, template_id, material_id, material_ratio, base_quantity, is_main_material, sort_order, remark, create_by, create_time, update_by, update_time, del_flag) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.detailId}, #{item.templateId}, #{item.materialId}, #{item.materialRatio}, #{item.baseQuantity}, #{item.isMainMaterial}, #{item.sortOrder}, #{item.remark}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.delFlag})
        </foreach>
    </insert>
</mapper>