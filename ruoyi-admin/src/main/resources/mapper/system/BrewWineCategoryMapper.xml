<mapper namespace="com.jiuchang.system.mapper.BrewWineCategoryMapper">
    
    <resultMap type="BrewWineCategory" id="BrewWineCategoryResult">
        <result property="categoryId"    column="category_id"    />
        <result property="categoryCode"    column="category_code"    />
        <result property="categoryName"    column="category_name"    />
        <result property="categoryType"    column="category_type"    />
        <result property="alcoholRangeMin"    column="alcohol_range_min"    />
        <result property="alcoholRangeMax"    column="alcohol_range_max"    />
