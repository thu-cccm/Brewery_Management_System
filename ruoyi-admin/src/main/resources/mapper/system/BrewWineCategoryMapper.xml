    <delete id="deleteBrewWineCategoryByCategoryId" parameterType="Long">
        delete from brew_wine_category where category_id = #{categoryId}
    </delete>

    <delete id="deleteBrewWineCategoryByCategoryIds" parameterType="String">
        delete from brew_wine_category where category_id in 
        <foreach item="categoryId" collection="array" open="(" separator="," close=")">
            #{categoryId}
        </foreach>
    </delete>
</mapper>