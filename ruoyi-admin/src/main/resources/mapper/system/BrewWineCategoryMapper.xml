         </trim>
    </insert>

    <update id="updateBrewWineCategory" parameterType="BrewWineCategory">
        update brew_wine_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryCode != null and categoryCode != ''">category_code = #{categoryCode},</if>
            <if test="categoryName != null and categoryName != ''">category_name = #{categoryName},</if>
            <if test="categoryType != null and categoryType != ''">category_type = #{categoryType},</if>
            <if test="alcoholRangeMin != null">alcohol_range_min = #{alcoholRangeMin},</if>
            <if test="alcoholRangeMax != null">alcohol_range_max = #{alcoholRangeMax},</if>
            <if test="fermentationDaysMin != null">fermentation_days_min = #{fermentationDaysMin},</if>
            <if test="fermentationDaysMax != null">fermentation_days_max = #{fermentationDaysMax},</if>
            <if test="optimalTemperature != null">optimal_temperature = #{optimalTemperature},</if>
            <if test="optimalHumidity != null">optimal_humidity = #{optimalHumidity},</if>
            <if test="description != null">description = #{description},</if>
