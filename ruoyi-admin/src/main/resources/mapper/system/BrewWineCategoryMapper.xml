    <sql id="selectBrewWineCategoryVo">
        select category_id, category_code, category_name, category_type, alcohol_range_min, alcohol_range_max, fermentation_days_min, fermentation_days_max, optimal_temperature, optimal_humidity, description, status, create_by, create_time, update_by, update_time, del_flag from brew_wine_category
    </sql>

    <select id="selectBrewWineCategoryList" parameterType="BrewWineCategory" resultMap="BrewWineCategoryResult">
        <include refid="selectBrewWineCategoryVo"/>
        <where>  
            <if test="categoryCode != null  and categoryCode != ''"> and category_code = #{categoryCode}</if>
            <if test="categoryName != null  and categoryName != ''"> and category_name like concat('%', #{categoryName}, '%')</if>
            <if test="categoryType != null  and categoryType != ''"> and category_type = #{categoryType}</if>
            <if test="alcoholRangeMin != null "> and alcohol_range_min = #{alcoholRangeMin}</if>
            <if test="alcoholRangeMax != null "> and alcohol_range_max = #{alcoholRangeMax}</if>
            <if test="fermentationDaysMin != null "> and fermentation_days_min = #{fermentationDaysMin}</if>
            <if test="fermentationDaysMax != null "> and fermentation_days_max = #{fermentationDaysMax}</if>
            <if test="optimalTemperature != null "> and optimal_temperature = #{optimalTemperature}</if>
            <if test="optimalHumidity != null "> and optimal_humidity = #{optimalHumidity}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBrewWineCategoryByCategoryId" parameterType="Long" resultMap="BrewWineCategoryResult">
        <include refid="selectBrewWineCategoryVo"/>
        where category_id = #{categoryId}
    </select>

    <insert id="insertBrewWineCategory" parameterType="BrewWineCategory" useGeneratedKeys="true" keyProperty="categoryId">
        insert into brew_wine_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryCode != null and categoryCode != ''">category_code,</if>
            <if test="categoryName != null and categoryName != ''">category_name,</if>
            <if test="categoryType != null and categoryType != ''">category_type,</if>
            <if test="alcoholRangeMin != null">alcohol_range_min,</if>
            <if test="alcoholRangeMax != null">alcohol_range_max,</if>
            <if test="fermentationDaysMin != null">fermentation_days_min,</if>
            <if test="fermentationDaysMax != null">fermentation_days_max,</if>
            <if test="optimalTemperature != null">optimal_temperature,</if>
            <if test="optimalHumidity != null">optimal_humidity,</if>
            <if test="description != null">description,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryCode != null and categoryCode != ''">#{categoryCode},</if>
            <if test="categoryName != null and categoryName != ''">#{categoryName},</if>
            <if test="categoryType != null and categoryType != ''">#{categoryType},</if>
            <if test="alcoholRangeMin != null">#{alcoholRangeMin},</if>
            <if test="alcoholRangeMax != null">#{alcoholRangeMax},</if>
            <if test="fermentationDaysMin != null">#{fermentationDaysMin},</if>
